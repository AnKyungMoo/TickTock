<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.km.ticktock.views.alarmsetting.SettingSecondViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3">

        <RelativeLayout
            android:id="@+id/layout_top_setting2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/btn_back_setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/btn_back_setting2"
                android:text="목적지 정하기"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_title_setting2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_top_setting2"
            android:layout_marginStart="40dp"
            android:layout_marginTop="52dp">

            <ImageView
                android:id="@+id/img_spot_setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_spot" />

            <!-- TODO: bold 처리하자..-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_spot_setting2"
                android:layout_marginTop="12dp"
                android:text="어디서 만나기로\n했더라?"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_title_setting2"
            android:layout_marginTop="40dp">

            <!-- TODO: 넓이 높이를 고정 값이 아니게 하자-->
            <RelativeLayout
                android:id="@+id/layout_source_setting2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/search_text_shape"
                android:onClick="@{() -> vm.sourceClick()}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ico_start" />

                <TextView
                    android:id="@+id/txt_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="마포구 합정동 잔다리로"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/btn_x_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/btn_search_x" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_destination_setting2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@id/layout_source_setting2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_text_shape"
                android:onClick="@{() -> vm.destinationClick()}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ico_end" />

                <TextView
                    android:id="@+id/txt_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="목적지를 입력해주세요."
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/btn_x_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/btn_search_x" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- TODO: 전체 상수 값으로 변경 -->
        <RelativeLayout
            android:id="@+id/btn_next_2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#0000ff"
            android:layout_above="@id/progress_bar_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 단계"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/progress_bar_2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="#ff0000"
                android:layout_weight="2"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="#ffffff"
                android:layout_weight="1"/>

        </LinearLayout>
    </RelativeLayout>
</layout>