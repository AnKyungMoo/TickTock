<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f3">

        <RelativeLayout
                android:id="@+id/layout_top_setting2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="18dp">

            <ImageView
                    android:id="@+id/btn_back_setting2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/btn_back_setting2"
                    android:text="목적지 정하기" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/layout_title_setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_top_setting2"
                android:layout_marginStart="40dp"
                android:layout_marginTop="52dp">

            <ImageView
                    android:id="@+id/img_spot_setting2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_spot" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_spot_setting2"
                    android:layout_marginTop="12dp"
                    android:text="어디서 만나기로\n했더라?" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_title_setting2"
                android:layout_marginTop="40dp">

            <!-- TODO: 넓이 높이를 고정 값이 아니게 하자-->
            <RelativeLayout
                    android:id="@+id/layout_source_setting2"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff" />

            <RelativeLayout
                    android:id="@+id/layout_destination_setting2"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/layout_source_setting2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff" />
        </RelativeLayout>
    </RelativeLayout>
</layout>